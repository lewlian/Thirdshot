# ================================================
# PickleSG - Environment Variables
# ================================================
# Copy this file to .env and fill in your values
# Never commit the actual .env file to version control

# ================================================
# DATABASE (PostgreSQL via Neon/Supabase)
# ================================================
# Connection string with pooling (for serverless environments)
DATABASE_URL="postgresql://postgres:[PASSWORD]@db.[PROJECT_REF].supabase.co:5432/postgres?pgbouncer=true"

# Direct connection (for migrations and Prisma Studio)
DIRECT_URL="postgresql://postgres:[PASSWORD]@db.[PROJECT_REF].supabase.co:5432/postgres"

# ================================================
# SUPABASE AUTHENTICATION
# ================================================
# Your Supabase project URL
NEXT_PUBLIC_SUPABASE_URL="https://[PROJECT_REF].supabase.co"

# Supabase anonymous key (safe to expose in client)
NEXT_PUBLIC_SUPABASE_ANON_KEY="eyJ..."

# Supabase service role key (KEEP SECRET - server-side only)
SUPABASE_SERVICE_ROLE_KEY="eyJ..."

# ================================================
# HITPAY PAYMENT GATEWAY
# ================================================
# HitPay API key (from HitPay dashboard)
HITPAY_API_KEY="..."

# HitPay webhook salt (for signature verification)
HITPAY_SALT="..."

# HitPay base URL
# Sandbox: https://api.sandbox.hit-pay.com/v1
# Production: https://api.hit-pay.com/v1
NEXT_PUBLIC_HITPAY_BASE_URL="https://api.sandbox.hit-pay.com/v1"

# ================================================
# EMAIL NOTIFICATIONS (RESEND)
# ================================================
# Resend API key (get from https://resend.com)
RESEND_API_KEY="re_..."

# From email address (must be verified domain or use Resend test domain: onboarding@resend.dev)
FROM_EMAIL="bookings@yourdomain.com"

# ================================================
# APPLICATION SETTINGS
# ================================================
# Public URL of your application
# Development: http://localhost:3000
# Production: https://yourdomain.com
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# ================================================
# OPTIONAL: CRON JOB SECURITY
# ================================================
# Secret for authenticating cron job requests
# Generate a random string for this
CRON_SECRET="your-secure-cron-secret"

# ================================================
# OPTIONAL: ERROR TRACKING (SENTRY)
# ================================================
# Uncomment when setting up Sentry
# NEXT_PUBLIC_SENTRY_DSN="https://xxx@sentry.io/xxx"
# SENTRY_AUTH_TOKEN="your-auth-token"

# ================================================
# OPTIONAL: ANALYTICS
# ================================================
# Uncomment when setting up analytics
# NEXT_PUBLIC_GA_MEASUREMENT_ID="G-XXXXXXXXXX"
